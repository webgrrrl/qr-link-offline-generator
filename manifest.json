{
  "manifest_version": 3,
  "name": "QR Code Generator",
  "version": "1.0",
  "description": "Generate QR code for current tab URL",
  "permissions": ["activeTab", "downloads"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  }
}